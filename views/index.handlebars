 <div class = "container-fluid">
  <div class = "row" id = "menu">
    <div class = "col-md-5" id = "readyToEatMenu">
      <h3>Ready to eat Burgers</h3>
      <div id = "readyBurger">
          {{#each burgers}}
            {{#unless devoured}}
              <br>{{this.id}} {{this.burger_name}}
              <button data-id = "{{this.id}}" class = "devour">Devour it!</button>
            {{/unless}}
          {{/each}}
      </div>
    </div>
    <div class = "col-md-2"></div>
    <div class = "col-md-5" id = "devouredBurger">
      <h3>Burgers Devoured</h3>
      <div id = "consumedBurger">
        {{#each burgers}}
          {{#if devoured}}
            <br>{{this.id}}.{{this.burger_name}}
          {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
</div>

<div class = "row">
  <div class = "col-md-4"></div>
  <div class = "col-md-4" id = "addBurger">
    <h3>Add a burger</h3>
    <form class = "create-form">
      <div class = "form-group">
        {{!-- <label for = "burger">Enter a burger name</label><br> --}}
        <input type = "textarea" id = "bur" name = "burger_name">
      </div>
      <button type = "submit" id = "submit" class = "btn-lg">Add Burger</button>
    </form>
  </div>
  <div class = "col-md-4"></div>
</div>