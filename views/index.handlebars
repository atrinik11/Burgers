  <!-- Pass in data from server.js -->

  <div class = "row">
    <div class = "col-md-5">
      <h3>Ready to eat Burgers</h3>
      <div id = "readyBurger">
          {{#each burgers}}
            {{#unless this.devoured}}
              <!--{{> burgers/burger-block devour = false}} -->
                <br>{{this.id}} {{this.burger_name}}
                <button data-id = "{{this.id}}" class = "devour">Devour it!</button>
            {{/unless}}
          {{/each}}
      </div>
    </div>
    <div class = "col-md-2"></div>
    <div class = "col-md-5">
      <h3>Burgers Devoured</h3>
      <div id = "consumedBurger">
        {{#each burgers}}
          {{#if this.devoured}}
            <div>
              <!--{{> burgers/burger-block devour = true}}-->
              <li>
                {{this.id}}.{{this.burger_name}}
                <button data-id= "{{this.id}}" class = "reorder">Reorder</button>
              </li>
            </div>
          {{/if}}
        {{/each}}
      </div>
    </div>
  </div>

<div class = "row">
  <div class = "col-md-4"></div>
  <div class = "col-md-4">
    <h3>Add a burger</h3>
    <form class = "create-form">
      <div class = "form-group">
        <label for = "burger">Enter a burger name</label><br>
        <input type = "text" id = "bur" name = "burger_name">
      </div>
      <button type = "submit" id = "submit">Add Burger</button>
    </form>
  </div>
  <div class = "col-md-4"></div>
</div>
